rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read public data (for development)
    match /public/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read leaderboards and achievements
    match /leaderboards/{document=**} {
      allow read: if request.auth != null;
    }
    
    match /achievements/{document=**} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read/write skill assessments
    match /assessments/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
